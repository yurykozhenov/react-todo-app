{
  "name": "react-todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^1.1.0",
    "@material-ui/icons": "^1.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.16.0",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/fetch-mock": "^6.0.3",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.3.0",
    "@types/prop-types": "^15.5.3",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^6.0.0",
    "@types/react-router-dom": "^4.2.7",
    "@types/redux-logger": "^3.0.6",
    "coveralls": "^3.0.1",
    "fetch-mock": "^6.4.3",
    "husky": "^1.0.0",
    "lint-staged": "^7.1.2",
    "prettier": "1.13.5",
    "redux-mock-store": "^1.5.1",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "2.9.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.(ts|tsx)",
      "!src/index.tsx",
      "!src/registerServiceWorker.ts"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "test:ci": "react-scripts-ts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "lint": "tslint --project tsconfig.json"
  }
}
